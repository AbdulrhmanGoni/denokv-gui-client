{
    "name": "@app/bridge-server",
    "version": "7.1.0",
    "description": "A tiny HTTP server to expose Deno KV database over HTTP",
    "type": "module",
    "sideEffects": false,
    "scripts": {
        "build": "vite build",
        "test": "vitest run tests/e2e/index.test.ts tests/units/*",
        "typecheck": "tsc --noEmit"
    },
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.mjs",
            "default": "./dist/index.mjs"
        }
    },
    "module": "./dist/index.mjs",
    "types": "./dist/index.d.ts",
    "files": [
        "dist",
        "README.md"
    ],
    "engines": {
        "node": ">=18.0.0"
    },
    "devDependencies": {
        "@types/deno": "^2.5.0",
        "@types/serialize-javascript": "^5.0.4",
        "typescript": "5.8.2",
        "vite-plugin-dts": "^4.5.4",
        "vite": "6.3.5",
        "vitest": "^4.0.15"
    },
    "dependencies": {
        "@hono/node-server": "1.19.7",
        "hono": "4.11.4",
        "serialize-javascript": "6.0.2"
    },
    "publish": {
        "include": [
            "src",
            "README.md"
        ]
    }
}