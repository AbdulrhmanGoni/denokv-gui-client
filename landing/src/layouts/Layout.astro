---
const description = "Modern desktop app to browse and manage Deno KV databases";
const title = "Deno KV GUI Client";
const url = "https://abdulrhmangoni.github.io/denokv-gui-client/";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta property="og:title" content={title} />
    <meta property="og:type" content="website" />
    <meta property="og:description" content={description} />
    <meta
      property="og:image"
      content="https://abdulrhmangoni.github.io/denokv-gui-client/apple-touch-icon-180x180.png"
    />
    <meta property="og:image:width" content="180" />
    <meta property="og:image:height" content="180" />
    <meta property="og:url" content={url} />
    <link rel="canonical" href={url} />
    <link rel="icon" type="image/png" href="/denokv-gui-client/favicon.png" />
    <link
      rel="apple-touch-icon"
      sizes="180x180"
      href="/denokv-gui-client/apple-touch-icon-180x180.png"
    />
    <link
      rel="apple-touch-icon"
      sizes="152x152"
      href="/denokv-gui-client/apple-touch-icon-ipad-retina-152x152.png"
    />
    <link
      rel="apple-touch-icon"
      sizes="120x120"
      href="/denokv-gui-client/apple-touch-icon-iphone-retina-120x120.png"
    />
    <link
      rel="apple-touch-icon"
      sizes="76x76"
      href="/denokv-gui-client/apple-touch-icon-ipad-76x76.png"
    />
    <link
      rel="apple-touch-icon"
      sizes="60x60"
      href="/denokv-gui-client/apple-touch-icon-iphone-60x60.png"
    />
    <meta name="generator" content={Astro.generator} />
    <title>
      {title} | Desktop app to browse & manage Deno KV Databases
    </title>
    <meta name="description" content={description} />
    <script is:inline>
      const mode =
        localStorage.getItem("theme") ??
        (window.matchMedia("(prefers-color-scheme: dark)").matches
          ? "dark"
          : "light");

      document.documentElement.classList.toggle("dark", mode == "dark");
    </script>
  </head>
  <body>
    <slot />
  </body>
</html>
