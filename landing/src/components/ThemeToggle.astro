---
import Moon from "../assets/moon.svg";
import Sun from "../assets/sun.svg";
---

<button
  id="theme-toggle"
  class="flex items-center justify-center p-2 rounded-lg hover:bg-soft transition-colors cursor-pointer"
  aria-label="Toggle theme"
>
  <Moon class="size-5 block dark:hidden" />
  <Sun class="size-5 hidden dark:block" />
</button>

<script>
  document.getElementById("theme-toggle")?.addEventListener("click", () => {
    localStorage.setItem(
      "theme",
      document.documentElement.classList.toggle("dark") ? "dark" : "light",
    );
  });
</script>
